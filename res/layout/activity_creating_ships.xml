<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/creating_ships_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@drawable/ic_background"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp" >

    <ToggleButton
        android:id="@+id/place_ships_button"
        android:layout_width="@dimen/button_width_middle"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_large"
        android:onClick="togglePlacingShipsMode"
        android:textOff="@string/place_ships"
        android:textOn="@string/commit_changes" />

    <Button
        android:id="@+id/create_random_button"
        android:layout_width="@dimen/button_width_middle"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/place_ships_button"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_large"
        android:enabled="false"
        android:onClick="random"
        android:text="@string/random" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="@dimen/button_width_middle"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/create_random_button"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_large"
        android:enabled="false"
        android:onClick="next"
        android:text="@string/next" />

</RelativeLayout>
	