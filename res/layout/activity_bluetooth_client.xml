<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_medium"
    android:background="@drawable/ic_background" >

    <ImageView
        android:id="@+id/logoBluetoothClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_logo" />

    <Button
        android:id="@+id/findDevicesButton"
        android:layout_width="@dimen/button_width_large"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logoBluetoothClient"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_large"
        android:onClick="discoveryDevicesON"
        android:text="@string/find_devices" />

	<ListView
	    android:id="@+id/listView1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/findDevicesButton" >
	    
	</ListView>
    
</RelativeLayout>
