<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/ic_background" >

    <ImageView
        android:id="@+id/logoGameMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:contentDescription="@string/logo"
        android:src="@drawable/ic_logo" />

    <Button
        android:id="@+id/joinGameButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/game_mode_client"
        android:background="@drawable/button_large"
        android:onClick="gameModeClient" />

    <Button
        android:id="@+id/createGameButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/joinGameButton"
        android:layout_alignLeft="@+id/joinGameButton"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_large"
        android:onClick="gameModeHost"
        android:text="@string/game_mode_host" />

</RelativeLayout>
